<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/medi_card"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/medicine_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="@drawable/background_shop"
                android:foreground="?attr/selectableItemBackground"
                android:padding="9dp"
                android:src="@drawable/farmco" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_medicine_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medi_card"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/medicines"
        android:textColor="@color/black" />

    <androidx.cardview.widget.CardView
        android:id="@+id/equip_card"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignTop="@+id/medi_card"
        android:layout_alignBottom="@+id/medi_card"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/medi_card"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/equipments_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="@drawable/background_shop"
                android:foreground="?attr/selectableItemBackground"
                android:padding="9dp"
                android:src="@drawable/equipments" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_equipments_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/equip_card"
        android:layout_alignBottom="@+id/tv_medicine_category"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_medicine_category"
        android:text="Equipments"
        android:textColor="@color/black" />

    <androidx.cardview.widget.CardView
        android:id="@+id/mombaby_card"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignTop="@+id/equip_card"
        android:layout_alignBottom="@+id/equip_card"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/equip_card"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mom_baby_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="@drawable/background_shop"
                android:foreground="?attr/selectableItemBackground"
                android:padding="9dp"
                android:src="@drawable/momandbaby" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_mom_baby_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mombaby_card"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_equipments_category"
        android:text="Mom-Baby"
        android:textColor="@color/black" />

    <androidx.cardview.widget.CardView
        android:id="@+id/supp_card"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignTop="@+id/mombaby_card"
        android:layout_alignBottom="@+id/mombaby_card"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/mombaby_card"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/supplements_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="@drawable/background_shop"
                android:foreground="?attr/selectableItemBackground"
                android:padding="9dp"
                android:src="@drawable/supplements" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_supplements_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/supp_card"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_mom_baby_category"
        android:text="Supplements"
        android:textColor="@color/black" />

    <androidx.cardview.widget.CardView
        android:id="@+id/covid_card"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignTop="@+id/supp_card"
        android:layout_alignBottom="@+id/supp_card"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/supp_card"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/covid_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="@drawable/background_shop"
                android:foreground="?attr/selectableItemBackground"
                android:padding="9dp"
                android:src="@drawable/covid" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_covid_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/covid_card"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_supplements_category"
        android:gravity="center"
        android:text="Covid Essentials"
        android:textColor="@color/black" />
</RelativeLayout>